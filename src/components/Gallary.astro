---
import "@splidejs/splide/css";
import gallaryImage from "../assets/IMG_0505.jpg";
import gallaryImage2 from "../assets/IMG_0711.jpg";
import gallaryImage3 from "../assets/IMG_0507.jpg";
import SectionTitle from "./SectionTitle.astro";
import CustomPicture from "./CustomPicture.astro";
const gallaryImages = [gallaryImage, gallaryImage2, gallaryImage3];
---

<section class="bg-secondary px-6 py-24" id="Gallary">
  <div class="mx-auto max-w-screen-2xl">
    <SectionTitle class="flex justify-start pb-16 text-accent/30">
      Gallary
    </SectionTitle>

    <section class="splide" aria-label="carousel">
      <div class="splide__track">
        <ul class="splide__list">
          {
            gallaryImages.map((gallaryImage, index) => (
              <li class="splide__slide">
                <CustomPicture
                  src={gallaryImage}
                  aspectRatio="1:1"
                  widths={[200, 400, 800]}
                  sizes="(max-width: 1024px) 100vw, 500px"
                  alt={"gallaryImage" + index}
                />
              </li>
            ))
          }
        </ul>
      </div>
    </section>

    <script>
      import Splide from "@splidejs/splide";
      document.addEventListener("DOMContentLoaded", () => {
        const splide = new Splide(".splide", {
          type: "loop",
          perPage: 3,
          drag: true,
          breakpoints: {
            1024: {
              perPage: 1,
            },
          },
        });
        splide.mount();
      });
    </script>
  </div>
</section>
