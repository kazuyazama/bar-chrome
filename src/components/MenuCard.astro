---
import { Image } from "astro:assets";
import Divider from "./Divider.astro";
import type { ImageMetadata } from "astro";
type Props = {
  menuImage: ImageMetadata;
  order?: boolean;
  title: string;
  notMenu?: boolean;
};
const { menuImage, order, title, notMenu } = Astro.props;
---

<figure class="flex flex-col gap-3 bg-secondary lg:flex-row">
  <Image src={menuImage} width={600} alt={title} />
  <figcaption
    class:list={[order && " order-last lg:order-first ", "basis-2/3 p-6 "]}
  >
    <h2 class="text-2xl lg:text-6xl">{title}</h2>
    <Divider class="mb-0" />
    {
      !notMenu ? (
        <ul>
          {new Array(4).fill(null).map((_, i) => (
            <li class="w-full border-b border-accent py-4">
              <dl class="flex w-full items-center justify-between">
                <dt>menu{i + 1}</dt>
                <dd>￥1,200</dd>
              </dl>
            </li>
          ))}
        </ul>
      ) : (
        <p class="py-4 lg:text-xl">無料のおつまみ多数用意してます！</p>
      )
    }
  </figcaption>
</figure>
