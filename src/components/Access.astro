---
import SectionTitle from "./SectionTitle.astro";

const shopDatas = [
  {
    dt: "営業時間",
    dd: "月～土曜日　21:00〜翌4:00",
  },
  {
    dt: "定休日",
    dd: "日曜日",
  },
  {
    dt: "客席数",
    dd: "カウンター席　10席",
  },
  {
    dt: "決済方法",
    dd: "各種クレジットカード、PayPay",
  },
  {
    dt: "その他",
    dd: "予約可（1名様から）、貸し切り可、全席喫煙可",
  },
  {
    dt: "アクセス",
    dd: "JR町田駅から徒歩10分",
  },
];
---

<section class=" pt-24 pb-32" id="Access">
  <SectionTitle class="flex justify-end pb-16 pr-6 text-accent/30">
    Access
  </SectionTitle>

  <div class="hero h-[500px] bg-access-image">
    <div class="hero-overlay bg-opacity-30"></div>
    <div
      class="grid h-full w-full grid-cols-2 justify-between gap-20 px-6 py-10 text-white"
    >
      <div class="flex h-full flex-col">
        <div class="flex-1 pt-10">
          <dl class="grid gap-4">
            <dt class="font-montserrat text-2xl">
              Bar Chrome（バー クローム）
            </dt>
            <dd class="text-lg">〒194-0013 東京都町田市soa-ve1F 612 原町田</dd>
          </dl>
        </div>
        <div
          class="grid w-full flex-none place-items-center bg-white/60 p-6 text-center text-black"
        >
          <dl class="grid gap-7">
            <dt class="text-xl">ご予約・お問い合わせ</dt>
            <dd class="font-montserrat text-3xl">070-4419-3000</dd>
          </dl>
        </div>
      </div>

      <div class="bg-white/60 p-6 text-black">
        <ul class="my-auto flex h-full flex-col justify-around">
          {
            shopDatas.map((shop) => (
              <li class="  border-b border-accent py-4 first:border-t">
                <dl class="flex items-center gap-5">
                  <dt class=" w-24 text-center  ">{shop.dt}</dt>
                  <dd>{shop.dd}</dd>
                </dl>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>

  <div class=" pt-20">
    <figure class="mx-auto flex w-[1200px] flex-col items-center gap-6">
      <figcaption class="self-start font-montserrat text-2xl">
        GoogleMap
      </figcaption>
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12986.210662210013!2d139.4510572!3d35.5400507!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6018f935ef875ea9%3A0x8fd1f54c56c767c!2sBar%20Chrome!5e0!3m2!1sja!2sjp!4v1688465118804!5m2!1sja!2sjp"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="h-[600px] w-full"></iframe>
    </figure>
  </div>
</section>
