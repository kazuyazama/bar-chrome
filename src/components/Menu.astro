---
import cocketailImage from "../assets/Frame 109 (1).png";
import foodImage from "../assets/Frame 109 (3).png";
import whiskeyImage from "../assets/Frame 109.png";
import MenuCard from "./MenuCard.astro";
import SectionTitle from "./SectionTitle.astro";
---

<section class="" id="Menu">
  <div class="mx-auto max-w-screen-2xl">
    <div class="grid -scroll-my-10 gap-10 pt-24 lg:gap-20">
      <SectionTitle class="flex justify-start pl-6 text-accent/30">
        Menu
      </SectionTitle>

      <MenuCard menuImage={whiskeyImage} order title="Whiskey" />
      <MenuCard menuImage={cocketailImage} title="Cocktail" />
      <MenuCard menuImage={cocketailImage} order title="Wine" />
      <MenuCard menuImage={foodImage} notMenu title="Food" />
    </div>
  </div>
</section>
