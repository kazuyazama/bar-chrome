---
import Divider from "./Divider.astro";
const { title, class: clasName, id } = Astro.props;

type Props = {
  title: string;
  class: string;
  id: string;
} & astroHTML.JSX.SlotHTMLAttributes;
---

<astro-floor-card data-title={title}>
  <div
    id={id}
    class:list={[
      clasName,
      "absolute  -bottom-[108px] lg:bottom-20 bg-white/50 p-6",
    ]}
  >
    <h3 class="z-10 text-2xl lg:text-6xl">{title}</h3>
    <Divider class="z-10 -mt-1 mb-2 lg:mb-4 lg:mt-0" />
    <p class="z-10 lg:text-2xl">
      <slot />
    </p>
  </div>
</astro-floor-card>

<script src="../scripts/floorCard.ts"></script>
