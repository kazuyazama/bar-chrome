---
import { Picture } from "@astrojs/image/components";
import heroImage from "../assets/hero-image.jpg";
import "@fontsource/moon-dance";
---

<div class="relative mt-16 overflow-hidden" id="Home">
  <Picture
    src={heroImage}
    aspectRatio="4:3"
    widths={[200, 400, 800]}
    sizes="(max-width: 1024px) 100vw, (max-width:1536px) 1536px, 1980px"
    alt="heroImage"
    class="h-80 w-full lg:h-[750px] 2xl:h-[920px]"
    loading="eager"
  />

  <div
    class="absolute left-10 top-1/3 z-10 grid -translate-y-1/2 -rotate-[5deg] font-moonDance text-5xl text-white lg:left-44 lg:top-1/2 lg:gap-24 lg:text-9xl"
  >
    <span>The best time</span>

    <span>for you...</span>
  </div>
  <div
    class="absolute bottom-24 left-10 z-10 grid place-items-center items-center gap-1 text-white lg:left-20"
  >
    <span class="absolute -top-6 font-montserrat text-xs lg:text-lg">scroll</span>
    <span
      class="absolute top-0 h-28 w-[1px] animate-scroll-down bg-white opacity-0"
    ></span>
  </div>
</div>
